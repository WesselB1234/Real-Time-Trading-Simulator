@{
    @model List<RealTimeStockSimulator.Models.MarketTransactionTradable>
    @using static RealTimeStockSimulator.Models.Helpers.StringFormatter
    @using static RealTimeStockSimulator.Models.Enums.NavEnabled;

    ViewData["title"] = "Transactions";
    ViewBag.NavEnabled = Transactions;
}

<partial name="_Navbar" />

<main class="w-75 mx-auto">
    <h1>
        Transactions
    </h1>
    <table class="table mt-4">
        <thead class="table-dark">
            <tr>
                <th>
                    Transaction ID
                </th>
                <th>
                    Symbol
                </th>
                <th>
                    Type
                </th>
                <th>
                    Value
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Total value
                </th>
                <th>
                    Status
                </th>
                <th>
                    Date
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(MarketTransactionTradable transaction in Model)
                {
                    <tr>
                        <td>
                            @transaction.TransactionId
                        </td>
                        <td>
                            @transaction.Tradable.Symbol
                        </td>
                        <td>
                            @transaction.Tradable.Type
                        </td>
                        <td>
                            $@FormatDecimalPrice(transaction.Price)
                        </td>
                        <td>
                            @transaction.Amount
                        </td>
                        <td>
                            $@FormatDecimalPrice(transaction.Price * transaction.Amount)
                        </td>
                        <td>
                            @transaction.Status
                        </td>
                        <td>
                            @transaction.Date
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</main>

<partial name="_Footer" />